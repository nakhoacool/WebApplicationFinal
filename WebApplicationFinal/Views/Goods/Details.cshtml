@model WebApplicationFinal.Models.Good

@{
    ViewBag.Title = "Details";
}

@functions{
    public static string GetImageBase64String(byte[] image)
    {
        string imageBase64Data = Convert.ToBase64String(image);
        string imageDataURL = string.Format("data:image/jpg;base64,{0}", imageBase64Data);
        return imageDataURL;
    }
}

<h2>Details</h2>

<div>
    <h4>Good</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <p>Product name</p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GName)
        </dd>

        <dt>
            <p>Manufacture</p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Manufacture)
        </dd>

        <dt>
            <p>Price</p>
        </dt>

        <dd>
            <p>@Model.SellingPrice.Value.ToString("n0") VND</p>
        </dd>

        <dt>
            <p>Photo</p>
        </dt>

        <dd>
            <img src="@GetImageBase64String(Model.GPhoto)" />
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
